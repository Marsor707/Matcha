<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_portrait"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/bg_user_default_portrait"
            tools:ignore="RtlHardcoded" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_portrait"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/img_portrait"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/specialist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/specialist_name"
                android:textColor="@color/textPrimary"
                android:textSize="15sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/specialist_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/specialist_skill"
                android:textColor="@color/textPrimary"
                android:textSize="15sp" />
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_leave_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_portrait"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_add"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/lin_leave_msg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:visibility="gone" />
</android.support.v7.widget.LinearLayoutCompat>